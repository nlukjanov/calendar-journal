{
  "name": "calendar-journal-backend",
  "description": "calendar journal web app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:start": "npm run db:stop ; mongod --fork --logpath /dev/null",
    "db:stop": "mongo admin --eval 'db.shutdownServer()'",
    "seed": "node db/userSeeds.js",
    "start:back": "npm run db:start && nodemon server.js",
    "test:back": "is-ci test:back:coverage test:back:watch",
    "test:back:watch": "jest --watchAll --runInBand",
    "test:back:coverage": "jest --runInBand"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.10.9",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.12.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@testing-library/jest-dom": "^5.11.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-polyfill": "^6.26.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.6.2",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
