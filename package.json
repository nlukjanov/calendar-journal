{
  "name": "calendar-journal",
  "description": "calendar journal web app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:start": "mongod --fork --logpath /dev/null",
    "db:stop": "mongo admin --eval 'db.shutdownServer()'",
    "start:front": "react-scripts start",
    "start:back": "npm run db:start && nodemon --exec babel-node backend/server.js",
    "build": "react-scripts build",
    "test:front": "react-scripts test --collect-coverage --watch --verbose --env=jest-environment-jsdom-sixteen",
    "test:back": "jest --watchAll --runInBand",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "start:dev": "concurrently \"npm run start:back\" \"npm run start:front\""
  },
  "dependencies": {
    "@testing-library/user-event": "^12.1.0",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@shelf/jest-mongodb": "^1.2.1",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "babel-polyfill": "^6.26.0",
    "cypress": "^4.11.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-watch-typeahead": "^0.6.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
