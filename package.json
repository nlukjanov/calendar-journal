{
  "name": "calendar-journal",
  "description": "calendar journal web app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:start": "mongod --fork --logpath /dev/null",
    "db:stop": "mongo admin --eval 'db.shutdownServer()'",
    "seed": "node db/userSeeds.js",
    "start:front": "react-scripts start",
    "start:back": "npm run db:start && nodemon --exec babel-node backend/server.js",
    "build": "react-scripts build",
    "test:front": "is-ci test:front:coverage test:front:watch",
    "test:front:watch": "react-scripts test --verbose --env=jest-environment-jsdom-sixteen",
    "test:front:coverage": "react-scripts test --watchAll=false --collect-coverage --verbose --env=jest-environment-jsdom-sixteen",
    "test:back": "is-ci test:back:coverage test:back:watch",
    "test:back:watch": "jest --watchAll --runInBand",
    "test:back:coverage": "jest --runInBand",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "start:dev": "concurrently \"npm run start:back\" \"npm run start:front\"",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^5.3.2",
    "@fullcalendar/react": "^5.3.1",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.12.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.8",
    "babel-polyfill": "^6.26.0",
    "cypress": "^5.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "is-ci-cli": "^2.1.2",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
