{
  "name": "calendar-journal",
  "description": "calendar journal web app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:start": "mongod --fork --logpath /dev/null",
    "db:stop": "mongo admin --eval 'db.shutdownServer()'",
    "start:front": "react-scripts start",
    "start:back": "nodemon --exec babel-node backend/server.js && npm run db:start",
    "build": "react-scripts build",
    "test:front": "react-scripts test --collect-coverage --watch --verbose",
    "test:back": "jest --watchAll --runInBand",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "cytest": "NODE_ENV=cypress npm run start:back && npm run start:front && npm run cypress:open"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.13",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@shelf/jest-mongodb": "^1.1.5",
    "@testing-library/cypress": "^6.0.0",
    "babel-polyfill": "^6.26.0",
    "cypress": "^4.6.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "jest-watch-typeahead": "^0.6.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
